<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bcss/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/icofont/icofont.min.css">
     
    <script defer src="/bjs/jquery.min.js"></script>
    <script defer src="/bjs/bootstrap.bundle.min.js"></script>
    <title>Trackify</title>
 
</head>
<body>
    <%- include('../partials/admin-nav') %>
    <div class="app">
        <div class="row">
            <div class="col-12 col-md-3 col-lg-2  order-2 order-md-1">
                <%- include('../partials/admin-sidebar') %>
            </div>
            <div class="col-12 col-lg-9  col-lg-10 order-1 order-md-2">
                <div class="page-view-area">
                    <div class="nav-adjust"></div>
                    
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-7">
                            <div class="page-info-div">
                                <h1 class="page-head">
                                    Select Bus to Manage Route
                                </h1>
                                <p class="mt-2">
                                    <a class="text-decoration-none text-dark" href="/admin">Home</a>&nbsp;>
                                    <a class="text-decoration-none text-info" href="#">Select Bus</a>
                                </p>
                            </div>
                        </div>
                        
                    </div>


                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-bordered table-hover">
                                <tr>
                                    <th>Bus No</th>
                                    <th>Reg No</th>
                                    <th>Driver</th>
                                    <th>Route </th>
                                    <th>Select</th>
                                </tr>
                                <% buses.forEach((i)=>{ %>
                                    <tr>
                                        <td><%=i.busNo%></td>
                                        <td><%=i.regNo%></td>
                                        <td><%=i.driver%></td>
                                        <td><%=i.routeName%></td>
                                        <td>
                                            <a href="/admin/route/<%=i.id%>">
                                                <button class="btn btn-outline-success btn-block">MANAGE ROUTE</button>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                                       
                            </table>
                        </div>
                       
                    </div>


                </div>
            </div>
        </div>
    </div>
    
    <script >
        document.getElementById('si2').classList.add('sidebar-item-active')
    </script>
</body>
</html>